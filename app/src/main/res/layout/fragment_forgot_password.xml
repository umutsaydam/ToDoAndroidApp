<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".Fragments.signInFragment">

    <RelativeLayout
        android:layout_alignParentTop="true"
        android:layout_height="wrap_content"
        android:id="@+id/signUpLogoLayout"
        android:layout_width="match_parent"
        android:minHeight="150dp"
        android:background="@drawable/logo_background_shape">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="15dp"
            android:text="Forgot My Password"
            android:textColor="@color/white"
            android:textSize="35sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/signUpLogoLayout"
        android:gravity="center">

        <EditText
            android:id="@+id/editTxtEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="12"
            android:hint="Email Adress"
            android:inputType="textEmailAddress"
            android:fontFamily="@font/roboto_regular"/>

        <Button
            android:id="@+id/btnSignInToMainPage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editTxtEmail"
            android:background="@drawable/button_style"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:ems="12"
            android:layout_marginTop="25dp"
            android:textAllCaps="false"
            android:text="Send email"/>
    </RelativeLayout>
</RelativeLayout>