<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/BACKGROUND"
    android:gravity="center">
    <EditText
        android:id="@+id/editTxtFormToDo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="45dp"
        style="@style/TEXT"
        android:fontFamily="@font/roboto_light"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnCancelToDo"
        style="@style/TEXT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTxtFormToDo"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:layout_toLeftOf="@+id/btnUpdateToDo"
        android:background="@null"
        android:ems="6"
        android:text="@string/toDoMessageNegativeMessage"
        android:textSize="15sp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnUpdateToDo"
        style="@style/TEXT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTxtFormToDo"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@null"
        android:ems="6"
        android:text="@string/update"
        android:textSize="15sp" />
</RelativeLayout>