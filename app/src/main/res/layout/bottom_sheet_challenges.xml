<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_sheet_style">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add_challenge"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"/>

            <EditText
                android:id="@+id/editTxtChallengeTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:ems="11"
                android:hint="Your challenge title"
                android:inputType="textPersonName"
                android:padding="10dp"
                android:layout_marginTop="35dp"
                android:background="@drawable/input_shape"/>

        <Spinner
            android:id="@+id/spinnerChallengeCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="50dp"
            android:minWidth="230dp"
            android:layout_marginTop="25dp"
            android:contentDescription="Chose a category"
            android:background="@drawable/input_shape"/>

        <LinearLayout
            android:id="@+id/mainPageDateSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="25dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Set day"
                android:textSize="18sp"
                android:layout_marginHorizontal="15dp"/>

            <EditText
                android:id="@+id/editTxtChallengeDay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/input_shape"
                android:hint="0"
                android:minWidth="120dp"
                android:minHeight="50dp"
                android:inputType="number"
                android:textAlignment="center" />
        </LinearLayout>

        <EditText
            android:id="@+id/editTxtChallengeDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:ems="11"
            android:hint="Challenge description"
            android:padding="10dp"
            android:layout_marginTop="35dp"
            android:inputType="textMultiLine"
            android:background="@drawable/input_shape"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="25dp">

        </LinearLayout>

        <Button
            android:id="@+id/btnAddNewChallenge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="250dp"
            android:background="@drawable/button_style"
            android:text="Add a new challenge"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/txtBackToChallenges"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back to list"
            android:textSize="18sp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp"/>
    </LinearLayout>
</ScrollView>